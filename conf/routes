# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                          controllers.Application.index

#Resources
GET    /contact-us                controllers.Resources.contactUs
GET    /blog                      controllers.Resources.blog
GET    /faq                       controllers.Resources.faq
GET    /discussionforum           controllers.Resources.discussionforum

#Authentication
GET    /login                     controllers.AuthController.login
POST   /authenticate              controllers.AuthController.authenticate
GET    /logout                    controllers.AuthController.logout

#Admin
GET    /admin                     controllers.AdminController.adminHome
GET    /brandForm                 controllers.AdminController.brandRegisterForm
POST   /saveMobileName            controllers.AdminController.saveBrand
GET    /modelForm                 controllers.AdminController.modelRegistrationForm
POST   /createMobileModel         controllers.AdminController.saveModel
GET    /requests                  controllers.AdminController.mobiles(status:String)
GET    /proofDemanded             controllers.AdminController.proofDemanded(imeid: String,page:String)
GET    /approve                   controllers.AdminController.approve(imeid: String,page:String)
GET    /pending                   controllers.AdminController.pending(imeid: String)
GET    /changeMobileRegTypeForm   controllers.AdminController.changeMobileRegTypeForm
GET    /changeMobileRegType       controllers.AdminController.changeMobileRegType(imeid: String)
GET    /delete                    controllers.AdminController.deleteMobile(imeid: String)

#Users
GET    /register-stolen-phone     controllers.MobileController.stolenMobileRegistrationForm
GET    /register-new-phone        controllers.MobileController.secureMobileRegistrationForm
POST   /mobileRegistration        controllers.MobileController.saveMobileUser
GET    /checkMobileStatus         controllers.MobileController.checkMobileStatus(imeid: String,user:String)
GET    /mobileStatusForm          controllers.MobileController.mobileStatusForm
GET    /mobileModel               controllers.MobileController.getModels(id:Int)
GET    /isImeiExist               controllers.MobileController.isImeiExist(imeiId: String)

#Javascript Routes
GET    /javascriptRoutes          controllers.Application.javascriptRoutes 

#Audit
GET    /timestamps                controllers.AuditController.timestampForm
GET    /registrationRecord        controllers.AuditController.registrationRecordsByYear(year:String)
POST   /auditIMEID                controllers.AuditController.timestampsByIMEI
GET    /auditAllRecords           controllers.AuditController.allTimestamps

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file              controllerrs.Assets.at(path="/public", file)
